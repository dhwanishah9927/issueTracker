<head>
  <style>
    .card {
      background-color: rgb(221, 206, 139);
    }
  </style>
</head>

<body>
  <!-- Created Project  -->
  <div class="mb-5 p-5">
    <%
    for (let i = 0; i < projects.length; i++) {
      let project = projects[i];
      %>
      <div class="card mx-auto mb-2" style="width: 100%;">

        <div class="card-header" style="font-size: 24px;">
          <span class="fw-bold">Project name :</span> <%= project.name %>
        </div>
        
        <div class="card-body">
          <div class="card-subtitle mb-2 text-muted">
            <span class="fw-bold">Description :</span> <%= project.description %>
          </div>
          
          <div class="card-subtitle mb-2 text-muted">
            <span class="fw-bold">Author :</span> <%= project.author %>
          </div>
          

          <div class="d-flex justify-content-end">
            <a href="/project/<%=project._id%>" class="btn btn-primary">Open project and Preserve Bugs</a>
          </div>
          
        </div>
      </div>
      <% } %>
  </div>
</body>